@model RWA.Models.ProductViewModel.IUProductViewModel

@{
    ViewBag.Title = "IUProduct";

SelectList ddlSubcategories = new SelectList(
items: Model.SubCategories,
dataTextField: "Naziv",
dataValueField: "IDPotKategorija");
}

<h2>@Model.Title</h2>

@using (Html.BeginForm(Model.ActionMetod))
{
    @Html.AntiForgeryToken() //brine se o tome oce li se pozvati popunjenu formu na update ili praznu na insert

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Product.IdProizvod, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.Product.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Product.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Product.Naziv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Product.BrojProizvoda, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Product.BrojProizvoda, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Product.BrojProizvoda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Product.Boja, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Product.Boja, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Product.Boja, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Product.MinKolicinaNaSkladistu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Product.MinKolicinaNaSkladistu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationSummary(true, " Ne valja ", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Product.MinKolicinaNaSkladistu, "", new { @class = "text-danger" })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Product.CijenaBezPdva, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Product.CijenaBezPdva, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Product.CijenaBezPdva, "", new { @class = "text-danger" })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label(expression: "IDPotKategorija", labelText: "PotKategorija")
                @Html.DropDownListFor(
                    x => x.Product.PotKategorijaID,
                    ddlSubcategories,
                    "-- Odaberite Potkategoriju --",
                    htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Product.PotKategorijaID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi promjene" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Natrag na listu proizvoda", "Index")
</div>
