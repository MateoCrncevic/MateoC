@model RWA.Models.SubCategoryViewModel.IUSubCategoryViewModel

@{
    ViewBag.Title = "IUSubCategory";


    SelectList ddlCategories = new SelectList(
  items: Model.Categories,
  dataTextField: "Naziv",
  dataValueField: "IDKategorija");
}

<h2>@Model.Title</h2>

@using (Html.BeginForm(Model.ActionMetod))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.SubCategory.IDPotKategorija, new { htmlAttributes = new { @class = "form-control" } })
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.SubCategory.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SubCategory.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SubCategory.Naziv, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class = "control-label col-md-2">Naziv kategorije</label>
            <div class="col-md-10">
                @Html.DropDownListFor(
                    x => x.SubCategory.KategorijaID,
                    ddlCategories,
                    "-- Odaberite kategoriju --",
                    htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubCategory.KategorijaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Natrag na listu potkategorija", "Index")
</div>
